<?xml version="1.0" encoding="UTF-8" ?>
<config>

    <routerDefaults>
        <namespace>SteelSite\Controllers\</namespace>
        <methodFunctions>
            <get>getAction</get>
            <post>post</post>
            <head>head</head>
            <put>put</put>
            <delete>delete</delete>
        </methodFunctions>
        <pathAppend>/?</pathAppend>
    </routerDefaults>

    <route>
        <path>/logout</path>
    </route>

    <route>
        <path>/</path>

        <method name="get">
            <class>Home</class>
        </method>
    </route>

    <route>
        <path>/signup</path>
        <method name="get">
            <class>Signup</class>
        </method>
    </route>

    <route>
        <path>/member</path>

        <method name="get">
            <class>Member</class>
            <!-- Default Method will be the name of the method: get -->
        </method>

        <route>
            <!-- @TODO Add in ACL Control at the router level -->
            <acl>
                <group>admin</group>
                <user>manager</user>
                <user>support</user>
            </acl>

            <!-- Routes can be included in other routes. In this case, the
             path /list is actually /member/list -->
            <path>/list</path>
            <method name="get">
                <class>MemberList</class>
            </method>

            <route>
                <path>/page/[0-9]+</path>
            </route>

            <route>
                <path>/[a-z]{1}.?</path>

                <method name="get">
                    <class>MemberList</class>
                    <function>section</function>
                </method>
            </route>

        </route>

        <route type="regex">
            <path>/[0-9]+</path>
            <method name="get">
                <class>MemberProfile</class>
                <function>index</function>
            </method>
        </route>
    </route>



</config>
